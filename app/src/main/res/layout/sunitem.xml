<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="#FFC82D">

    <RelativeLayout
        android:id="@+id/sun_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/sun_title_raw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/sun_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="16dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="折线图"/>
        </LinearLayout>


        <com.example.ldy.weiyuweather.Utils.SunRiseDownView
            android:id="@+id/sun_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sun_title_raw"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_margin="10dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
