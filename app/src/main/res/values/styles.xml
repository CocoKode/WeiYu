<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom theme -->
    <style name="TranslucentTheme" parent="AppTheme">
    </style>

    <!-- open theme -->
    <style name="openTheme" parent="TranslucentTheme">

        <item name="android:windowBackground">@mipmap/open_bg</item>
    </style>

    <style name="click_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/arrow</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:background">#20000000</item>
    </style>
</resources>
